<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/layout">
    <decorator name="login" page="singleColumnLayoutLogin.jsp">
        <pattern>/transys/login/**</pattern>
    </decorator>
    <decorator name="home" page="singleColumnLayout.jsp">
        <pattern>/transys/home*</pattern>
    </decorator>
    <decorator name="customer" page="singleColumnLayout.jsp">
        <pattern>/transys/customer/**</pattern>
    </decorator>
    <decorator name="order" page="singleColumnLayout.jsp">
        <pattern>/transys/order/**</pattern>
    </decorator>
    <decorator name="permit" page="singleColumnLayout.jsp">
        <pattern>/transys/permit/**</pattern>
    </decorator>
    <decorator name="publicMaterialIntake" page="singleColumnLayout.jsp">
        <pattern>/transys/publicMaterialIntake/**</pattern>
    </decorator>
    <decorator name="masterData" page="singleColumnLayout.jsp">
        <pattern>/transys/masterData/**</pattern>
    </decorator>   
    <decorator name="reports" page="singleColumnLayout.jsp">
        <pattern>/transys/reports/**</pattern>
    </decorator> 
    <decorator name="migration" page="singleColumnLayout.jsp">
        <pattern>/transys/migration/**</pattern>
    </decorator>
    <decorator name="popUp" page="popUpLayout.jsp">
        <pattern>/transys/order/notesModal.jsp</pattern>
        <pattern>/transys/customer/formModal.jsp</pattern>
        <pattern>/transys/customer/deliveryAddressModal.jsp</pattern>
        <pattern>/transys/permit/formModal.jsp</pattern>
        <pattern>/transys/permit/formForCustomerModal.jsp</pattern>
        
        <pattern>/transys/orderPermitAlert/**</pattern>
        <pattern>/transys/customer/customerListReport.jsp</pattern>
    </decorator> 
</decorators> 